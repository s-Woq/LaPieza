---
import { sponsors } from "../../consts/sponsors.ts"
import "../../styles/global.css";


const firstRow = sponsors.slice(0,6);
const secondRow = sponsors.slice(6,12);
---

<section id="sponsors" class="max-w-4xl mx-auto my-10 md:my-20 py-20 md:py-36">
  <h3 class="flex justify-center font-Lexend text-center font-extrabold text-2xl md:text-3xl py-6 md:py-10 px-6 md:px-10 text-white">
    Ya han Confiado en Mi:
  </h3>
  
  <!-- Primera fila de sponsors -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3 sm:gap-4 md:gap-6 place-items-center mb-6 md:mb-8">
    {firstRow.map((sponsor) => (
      <a
        href={sponsor.url}
        target="_blank"
        rel="noopener noreferrer"
        class="block"
      >
        <img
          src={sponsor.image.logo}
          alt={sponsor.name}
          class="w-20 h-20 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 rounded hover:border-blue-500 hover:shadow-lg object-contain grayscale hover:grayscale-0 transition duration-300"
        />
      </a>
    ))}
  </div>
  
  <!-- Segunda fila de sponsors -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3 sm:gap-4 md:gap-6 place-items-center mb-6 md:mb-8">
    {secondRow.map((sponsor) => (
      <a
        href={sponsor.url}
        target="_blank"
        rel="noopener noreferrer"
        class="block"
      >
        <img
          src={sponsor.image.logo}
          alt={sponsor.name}
          class="w-20 h-20 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 rounded hover:border-blue-500 hover:shadow-lg object-contain grayscale hover:grayscale-0 transition duration-300"
        />
      </a>
    ))}
  </div>
</section>